{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "jsx": "react-native",
    "lib": ["ES6", "DOM"],
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": [
    "index.ts",
    "index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "lib", "example"]
}
